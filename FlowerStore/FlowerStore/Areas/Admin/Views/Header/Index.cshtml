@model Header
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Create New Category</h4>

                    <form class="forms-sample" method="post" asp-route-id="1" asp-controller="Header" asp-action="Index">
                        <div class="form-group">
                            <label asp-for="Logo">Name</label>
                            <input class="form-control" asp-for="Logo" placeholder="Name" value="">
                            <span class="text-danger" asp-validation-for="Logo"></span>
                            
                        </div>
                      


                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

